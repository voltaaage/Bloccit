<%= form_for [topic, post, comment] do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_message.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="row">
    <div class="col-md-8">
      <%= form_group_tag(comment.errors[:body]) do %>
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter comment body" %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Create Comment", class: 'btn btn-success' %>
  </div>
<% end %>