<%= form_for [@post, @post.comments.build],remote: true do |f| %>
  <div class="row">
    <div class="col-md-8">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter comment body" %>
        <%= hidden_field_tag :post_id, params[:id] %>
        <div class="form-group">
        <%= f.submit "Create Comment", class: 'btn btn-success' %>
      </div>
    </div>
  </div>

  
<% end %>